@using System.Web.UI.WebControls
@model GUI_eksamen_web.Models.JokeModels
@{
    ViewBag.Title = "NewJoke";
}
<head>
    <script>
    var today = new Date();
    var dd = today.getDate();
    var mm = today.getMonth() + 1; //January is 0!
    var yyyy = today.getFullYear();
    if (dd < 10) {
        dd = '0' + dd;
    }
    if (mm < 10) {
        mm = '0' + mm;
    }

    today = yyyy + '-' + mm + '-' + dd;
    document.getElementById("dateField").setAttribute("max", today);
    </script>
</head>

<h2>Indtast en ny vittighed</h2>

@using (Html.BeginForm("Joke", "NewJoke", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
{
    <div class="row">
        <div class="col-md-4">
            @Html.TextAreaFor(m => m.NewJoke, new {PlaceHolder = "Indtast din vittighed...", @class = "form-control", @style = "height: 300pt; min-width: 100%; min-height: 300pt"})
        </div>

        <div class="form-group">
            @Html.TextBoxFor(m => m.Date, new {placeholder ="Dato dd,mm,yyyy", @class = "form-control", @id="dateField"})
            <br/>
            @Html.TextBoxFor(m => m.Source, new {placeholder="Kilde", @class = "form-control"})
            <br/>
            <input type="button" value="Fortryd" class="btn btn-default"/>
            <br/>
            <br/>
            <input type="submit" value="Gem" class="btn btn-default" />
        </div>
    </div>
    <br/>
        @Html.TextAreaFor(m => m.TagString, new { placeholder="Emne1, Emne2", @class = "form-control", style="min-width: 58%"})
}


